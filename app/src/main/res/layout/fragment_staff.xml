<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundGravity="center"
    android:textAlignment="center"
    tools:context=".ui.staff.StaffFragment"
    android:id="@+id/container"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="160dp"
    tools:layout_editor_absoluteY="112dp"
    android:background="@drawable/aa">

    <Button
        android:id="@+id/manager"
        android:layout_marginBottom="4dp"
        android:foregroundGravity="center"
        android:text="manager"
        android:paddingTop="10dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/chef"
        tools:layout_editor_absoluteX="160dp"
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:background="@color/bluee"
        android:textColor="@color/white"
        android:drawableTop="@drawable/ic_baseline_supervisor_account"/>

    <Button
        android:id="@+id/chef"
        android:layout_row="0"
        android:paddingTop="10dp"
        android:layout_column="6"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="4dp"
        android:foregroundGravity="center"
        android:text="chef"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/waiter"
        tools:layout_editor_absoluteX="160dp"
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:layout_marginTop="100dp"
        android:background="@color/bluee"
        android:textColor="@color/white"
        android:drawableTop="@drawable/ic_baseline_hot_tub_24"/>

    <Button
        android:id="@+id/waiter"
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:layout_row="1"
        android:background="@color/bluee"
        android:textColor="@color/white"
        android:layout_column="0"
        android:paddingTop="10dp"
        android:layout_marginBottom="12dp"
        android:foregroundGravity="center"
        android:text="Waiter"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/kitchenStaff"
        tools:layout_editor_absoluteX="160dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:drawableTop="@drawable/ic_baseline_dining"/>

    <Button
        android:id="@+id/kitchenStaff"
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_row="2"
        android:paddingTop="10dp"
        android:layout_column="6"
        android:layout_marginBottom="12dp"
        android:foregroundGravity="center"
        android:text="Kitchen Staff"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/cleaningStaff"
        tools:layout_editor_absoluteX="160dp"
        android:background="@color/bluee"
        android:textColor="@color/white"
        android:drawableTop="@drawable/ic_baseline_kitchen"/>

    <Button
        android:id="@+id/cleaningStaff"
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@color/bluee"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:layout_marginBottom="12dp"
        android:foregroundGravity="center"
        android:text="Cleaning Staff"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/parkingStaff"
        tools:layout_editor_absoluteX="160dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:drawableTop="@drawable/ic_baseline_cleaning_services"/>

    <Button
        android:id="@+id/parkingStaff"
        android:layout_height="100dp"
        android:layout_width="150dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_row="1"
        android:layout_column="6"
        android:background="@color/bluee"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:foregroundGravity="center"
        android:text="Parking Staff"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/cleaningStaff"
        tools:layout_editor_absoluteX="160dp"
        android:drawableTop="@drawable/ic_baseline_local_parking"/>

</GridLayout>
